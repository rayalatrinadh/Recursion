package com.Recursion;


//15-04-2022 20:53
public class SumOfDigits {
    public static void main(String[] args) {
        int ans = sumOfDigits(55);
        System.out.println(ans);
    }
    static int sumOfDigits(int n){

//        if(n == 0){
//            return n;
//        }

        if(n%10 == n){
            return n;
        }

        return (n%10) + sumOfDigits(n/10);
    }

}
